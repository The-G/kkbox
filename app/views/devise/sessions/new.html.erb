<div class="border-form-div">
  <h2>Log in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true ,placeholder:"Input email address"%>
    <%= f.password_field :password, placeholder:"Input your password" %>
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"> <%#= f.label :remember_me %> <input type="checkbox" value="">Remember me </label>
    <% end -%>
    <%= f.submit "Log in" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
