<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><i class="fa  fa-user"></i> Member list</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Member Lists
            </div>
            <div class="panel-body">
              <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                              <%@members.column_names.each do |c|  %>
                              <th> <%=c%> </th>
                              <% end %>
                            </tr>
                        </thead>
                        <tbody>
                              <% @members.each do |member| %>
                              <tr>
                                <% @members.column_names.each do |c| %>
                                <td><%=member[c]                    %></td>
                                <% end %>
                              </tr>
                              <% end %>
                        </tbody>
                    </table>
                    <%#= paginate @members %>
            </div>
            <div class="col-lg-8">
                <div id="morris-bar-chart"></div>
            </div>
            <!-- /.col-lg-8 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>





<!-- DataTables JavaScript -->
<script src="/assets/datatables/jquery.dataTables.min.js"></script>
<script src="/assets/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="/assets/datatables-responsive/dataTables.responsive.js"></script>


<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
});
</script>
